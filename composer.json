{
    "name": "cakedc/enum",
    "description": "Enumeration list Plugin for CakePHP 3",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "cakedc",
        "enum"
    ],
    "homepage": "https://github.com/cakedc/enum",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/cakedc/enum/issues",
        "source": "https://github.com/cakedc/enum"
    },
    "require": {
        "php": ">=7.3",
        "cakephp/cakephp": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "vlucas/phpdotenv": "^3.3",
        "cakephp/cakephp-codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "CakeDC\\Enum\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeDC\\Enum\\Test\\": "tests"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "analyse": [
            "@stan",
            "@psalm"
         ],
        "check": [
            "@cs-check",
            "@test",
            "@analyse"
        ],
        "cs-check": "phpcs -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "cs-fix": "phpcbf --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "test": "phpunit --stderr",
        "stan": "phpstan analyse src/ && psalm --show-info=false",
        "psalm": "psalm --show-info=false",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.11 vimeo/psalm:^3.0 && mv composer.backup composer.json",
        "rector-setup": "cp composer.json composer.backup && composer require --dev rector/rector:^0.4.11 && mv composer.backup composer.json",
        "coverage-test": "phpunit --stderr --coverage-clover=clover.xml"
    }
}
